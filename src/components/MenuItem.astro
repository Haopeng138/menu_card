---
// src/components/MenuItem.astro
interface Props {
  name: string;
  description: string;
  price: number;
  image: string;
}

const { name, description, price, image } = Astro.props;
---

<div class="flex items-center justify-between border-b border-gray-200 dark:border-gray-700 pb-4 mb-4">
    <div class="flex items-center space-x-4">
        <img 
            src={image} 
            alt={name} 
            class="w-24 h-24 object-cover rounded-lg shadow-md"
        />
        <div>
            <h3 class="text-xl font-bold text-black dark:text-white">{name}</h3>
            <p class="text-gray-600 dark:text-gray-400 italic">{description}</p>
        </div>
    </div>
    <span class="text-[#A3353E] font-bold text-lg">
        {price.toFixed(2)}â‚¬
    </span>
</div>